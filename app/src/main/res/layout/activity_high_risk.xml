<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HighRiskActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/high_risk_activity_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moderate_risk"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/high_risk_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a bunch of words we dont know what's going in here yet blah blah blah blah blah blah blah blah"
        android:textAlignment="center"
        android:textSize="25sp" />


</LinearLayout>